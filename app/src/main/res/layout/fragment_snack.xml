<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/makaroni_1"
    tools:context=".fragments.SnackFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="154dp"
        android:layout_height="67dp"
        android:layout_marginTop="48dp"
        android:background="#8FF3EEEE"
        android:text="Snack"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.73" />

    <LinearLayout
        android:id="@+id/mieLidi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9AD6FF"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:src="@drawable/mielidi"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="482dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Mie Lidi"
            android:textAlignment="center"
            android:textSize="31sp"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="482dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Pringless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF7DCE"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:src="@drawable/pringles"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="482dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Pringles"
            android:textAlignment="center"
            android:textSize="31sp"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="482dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Astor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#23FF34"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:src="@drawable/astor"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="482dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Astor"
            android:textAlignment="center"
            android:textSize="31sp"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="482dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Kacang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFCFC"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:src="@drawable/kacang"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="482dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="731dp"
            android:text="Kacang"
            android:textAlignment="center"
            android:textSize="31sp" />

    </LinearLayout>

    <Button
        android:id="@+id/ButtonSnack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E9EF27FF"
        android:text="Informasi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintVertical_bias="0.182" />
</androidx.constraintlayout.widget.ConstraintLayout>
